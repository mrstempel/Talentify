@using System.Globalization
@model IEnumerable<Talentify.ORM.DAL.Models.User.Student>

@{
    ViewBag.Title = "NotConfirmedList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-container" style="text-align: left;">
	<h2>Nicht bestätigte Registrierungen</h2>
	
	<table>
		<tr>
			<th>Name</th>
			<th>E-Mail</th>
			<th>Registriert am</th>
			<th>Bestätigungslink</th>
		</tr>
		@foreach (var student in Model)
		{
			<tr>
				<td>@student.Firstname @student.Surname</td>
				<td><a href="mailto:@student.Email">@student.Email</a></td>
				<td>@student.JoinedDate.ToString("g", new CultureInfo("de"))</td>
				<td style="font-size: 16px;">http://www.talentify.me/Register/Confirm?c=@student.RegisterCode.ToString()</td>
			</tr>
		}
	</table>
	
	<p>@Html.ActionLink("zurück", "Index", "User")</p>

</div>
