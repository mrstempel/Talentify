@model Talentify.ORM.DAL.Models.Content.Event

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
	$(this).ready(function()
	{
		$('#Type').val('@Convert.ToInt32(Model.Type)');
	});
</script>

<div id="page-container">
	<h1>Neues Event erstellen</h1>
	@using (Html.BeginForm("Edit", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
		@Html.HiddenFor(m => m.CreatedById)
		@Html.HiddenFor(m => m.Id)
		@Html.HiddenFor(m => m.UpdateById)
		<table>
			<tr>
				<td>@Html.LabelFor(m => m.IsOnline)</td>
				<td>@Html.CheckBoxFor(m => m.IsOnline)</td>
			</tr>
			<tr>
				<td>Typ</td>
				<td>
					<select name="Type" id="Type">
						<option value="0">talentify Academy (Workshops)</option>
						<option value="1">talentify Social Skill Lab</option>
						<option value="2">talentify on Tour</option>
						<option value="3">Eventtipps</option>
					</select>
				</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.Title)</td>
				<td>@Html.TextBoxFor(m => m.Title)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.Headline)</td>
				<td>@Html.TextBoxFor(m => m.Headline)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.PreviewImage)</td>
				<td>
					@if (!string.IsNullOrEmpty(Model.PreviewImage))
					{
						<img src="/uploads/pages/@Model.PreviewImage"/><br/>
						@Html.HiddenFor(m => m.PreviewImage)
					}
					<input type="file" name="uploadPreview" id="PreviewImage"/>
				</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.Image)</td>
				<td>
					@if (!string.IsNullOrEmpty(Model.Image))
					{
						<img src="/uploads/pages/@Model.Image"/><br/>
						@Html.HiddenFor(m => m.Image)
					}
					<input type="file" name="uploadImage" id="Image"/>
				</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.HomeImage)</td>
				<td>
					@if (!string.IsNullOrEmpty(Model.HomeImage))
					{
						<img src="/uploads/pages/@Model.HomeImage"/><br/>
						@Html.HiddenFor(m => m.HomeImage)
					}
					<input type="file" name="homeImage" id="HomeImage"/>
				</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.BeginDate)</td>
				<td>@Html.EditorFor(m => m.BeginDate)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.BeginTime)</td>
				<td>@Html.EditorFor(m => m.BeginTime)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.EndTime)</td>
				<td>@Html.EditorFor(m => m.EndTime)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.MaxParticipant)</td>
				<td>@Html.TextBoxFor(m => m.MaxParticipant)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.LocationName)</td>
				<td>@Html.TextBoxFor(m => m.LocationName)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.Address)</td>
				<td>@Html.TextBoxFor(m => m.Address)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.ZipCode)</td>
				<td>@Html.TextBoxFor(m => m.ZipCode)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.City)</td>
				<td>@Html.TextBoxFor(m => m.City)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.Country)</td>
				<td>@Html.TextBoxFor(m => m.Country)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.Latitude)</td>
				<td>@Html.TextBoxFor(m => m.Latitude)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.Longitude)</td>
				<td>@Html.TextBoxFor(m => m.Longitude)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.Content)</td>
				<td>@Html.TextAreaFor(m => m.Content)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.DetailUrl)</td>
				<td>@Html.TextBoxFor(m => m.DetailUrl)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.Bonuspoints)</td>
				<td>@Html.TextBoxFor(m => m.Bonuspoints)</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(m => m.Price)</td>
				<td>@Html.TextBoxFor(m => m.Price)</td>
			</tr>
			<tr>
				<td>&nbsp;</td>
				<td><input type="submit" value="Speichern"/></td>
			</tr>
		</table>
	}
</div>
