@{
	var talentecheckLink = TalentecheckSession != null ? "/Highscore/Talentecheck" : "/Talentecheck";
}

<script>
	$(this).ready(function()
	{
		setNotificationCount(@NotificationCount, false);
		var notificationCheck = window.setInterval("checkNotifications()", 1500);
	});
</script>

<div class="logged-logo-container">
	<div class="main-menu">
		<a href="javascript:void(0);" onclick="toggleMenu('nav-menu-menu');" class="nav-icon-link"><img src="/Images/header-menu.png" id="header-menu"/></a>
		<div class="nav-menu" id="nav-menu-menu">
			<div class="arrow"></div>
			@Html.ActionLink("Startseite", "Index", "Start")
			@if (HasSchool)
			{
				@Html.ActionLink("Lernhilfecenter", "Index", "CoachingCenter")
				if (IsCoachingEnabled)
				{
					@Html.ActionLink("MentorIn finden", "Index", "Teacher")
				}
			}
			else
			{
				<a href="javascript:void(0);" onclick="loadNoSchoolPopup();">Lernhilfecenter</a>
				<a href="javascript:void(0);" onclick="loadNoSchoolPopup();">MentorIn finden</a>
			}
			
			@Html.ActionLink("Events", "Index", "Events")
		</div>
	</div>
	<a href="/Start"><img src="/Images/logo.png" alt="talentify"/></a>
</div>
<div class="logged-container">
	<ul>
		<li><a href="@talentecheckLink"><img src="/Images/talentecheck-highscore-header.png"/></a></li>
		<li><a href="javascript:void(0);" onclick="loadFeedbackForm();" class="link-button desktop" style="font-size: 14px;padding: 8px 20px;display:inline-block;">Feedback...</a></li>
		<li class="profile-img"><a href="/Profile" title="@LoggedUser.Firstname @LoggedUser.Surname" style="background:url('@LoggedUser.ProfileImageSmall')"></a></li>
		<li class="notifications">
			<span id="notification-count"></span>
			<a href="javascript:void(0);" onclick="toggleMenu('nav-menu-notifications');" class="nav-icon-link" id="notification-link"><img src="/Images/header-notifications.png" alt="Benachrichtigungen" id="header-notifications"/></a>
			<div class="nav-menu" id="nav-menu-notifications">
				<div class="arrow"></div>
				<div id="notification-list-loading">Lade Benachrichtigungen...</div>
				<div id="notification-list"></div>
				@Html.ActionLink("Alle Notifications anzeigen", "AllNotifications", "Notification")
			</div>
		</li>
		<li class="settings">
			<a href="javascript:void(0);" onclick="toggleMenu('nav-menu-settings');" class="nav-icon-link"><img src="/Images/header-settings.png" alt="Einstellungen" id="header-settings"/></a>
			<div class="nav-menu" id="nav-menu-settings">
				<div class="arrow"></div>
				@Html.ActionLink("Einstellungen", "Index", "Settings")
				<a href="javascript:void(0);" onclick="logout();">Logout</a>
			</div>
		</li>
	</ul>
</div>